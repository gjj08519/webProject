<h2>All Categories</h2>

{{#unless categories}}
<p>There are no categories yet! Please make one using the form below.</p>
{{else}}
<table id="categories">
	<thead>
		<tr>
			<th>Title</th>
			<th>Date Created</th>
			<th>Owner</th>
			<th>Deleted</th>
		</tr>
	</thead>
	<tbody>
		{{#each categories}}
		<tr category-id="{{ id }}">
			<td><a href="{{ path 'category/{id}' id }}">{{ title }}</a></td>
			<td>{{ createdAt }}</td>
			<td>{{ user.username }}</td>
			{{#if deletedAt}}
			<td>Yes</td>
			{{else}}
			<td>No</td>
			{{/if}}
		</tr>
		{{/each}}
	</tbody>
</table>
{{/unless}}
